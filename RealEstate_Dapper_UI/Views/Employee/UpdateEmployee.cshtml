@model UpdateEmployeeDto

@{
    ViewData["Title"] = "UpdateEmployee";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        div class="col-12">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4"> Personel Güncelleme Sayfası</h6>
            <form method="post">
                <input type="hidden" asp-for="EmployeeID" class="form-control" />
                <label>personel adı</label>
                <input type="text" asp-for="Name" class="form-control" />
                <br />
                <label>personel unvanı</label>
                <input type="text" asp-for="Title" class="form-control" />
                <br />
                <label>personel maili</label>
                <input type="email" asp-for="Mail" class="form-control" />
                <br />
                <label>personel numarası</label>
                <input type="tel" asp-for="PhoneNumber" class="form-control" />
                <br />
                <label>personel fotoğrafı </label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
                <br />

                <button class="btn btn-primary">personeli kaydet</button>
            </form>

        </div>
    </div>
</div>

